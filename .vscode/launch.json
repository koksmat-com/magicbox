    {
      "name": "Workers debug",
      "type": "node-terminal",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/workers",
      "command": "npm run debug "
    },

   
    {
      "name": "scripts-exchange pack",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/businesslogic/scripts-exchange",
      "command": "npm run build:pack"
    },

   
    {
      "name": "scripts-exchange parsecsv",
