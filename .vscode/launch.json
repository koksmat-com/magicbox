    {
      "name": "Web debug",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/web",
      "command": "npm run dev:web"
    },
   
    {
      "name": "CLI debug",
      "type": "node-terminal",
