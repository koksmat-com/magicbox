{
  "name": "magicbox",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "magicbox": "./bin/index.js"
  },
  "scripts": {
    "build": "npx tsc",
    "clean": "rm -rf .turbo && rm -rf node_modules ",
    "dev": "npx tsc --watch",
    "run:schema": "ts-node ./src/. -S",
    "run:validate:exchange": "node ./dist/. validate exchange",
    "run:excel:orgdl": "node ./dist/. excel \"./data/maillists/Mail List (04-2023).XLSX\" org  ./data/maillists/segments.json --companyname Nets  ",
    "run:excel:sheets": "node ./dist/. excel ./data/sheets.XLSX sheets  ./data/sheets.json   ",
    "run:message": "node ./dist/. sharedmailbox test1 test2 test3 test4 test5  ",
    "run:transform": "node ./dist/. transform emails /Users/nielsgregersjohansen/Downloads/exchange.recipients.json ./emails.csv",
    "debug": "export DEBUG=xmagicbox* && dotenv -e ../../.env npm run run:transform",
    "debug:validate:exchange": "export DEBUG=mxagicbox* && dotenv -e ../../.env npm run run:excel:orgdl",
    "run:create": "ts-node ./src/. -C",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^4.5.0",
    "@koksmat/core": "workspace:*",
    "@koksmat/schemas": "workspace:*",
    "@koksmat/facade": "workspace:*",
    "@koksmat/messaging": "workspace:*",
    "@koksmat/powerpacks": "workspace:*",
    "@koksmat/scripts-exchange": "workspace:*",
    "@koksmat/react-components": "workspace:*",
    "chalk": "^4.1.2",
    "commander": "^10.0.0",
    "csv": "^6.2.10",
    "exceljs": "^4.3.0",
    "figlet": "^1.5.2"
  },
  "devDependencies": {
    "@koksmat/tsconfig": "workspace:0.0.0",
    "@types/node": "^18.15.11",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}
